<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" minHeight="400.0" minWidth="400.0" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <VBox minHeight="400.0" minWidth="400.0">
         <children>
            <HBox minWidth="400.0" prefHeight="350.0" prefWidth="200.0">
               <children>
                  <TextArea fx:id="textField" nodeOrientation="LEFT_TO_RIGHT" prefHeight="300.0" prefWidth="400.0">
                     <font>
                        <Font name="Consolas" size="16.0" />
                     </font>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextArea>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
               <children>
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#addEvent" text="Добавить запись">
                     <font>
                        <Font name="Consolas" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="showButton" mnemonicParsing="false" onAction="#showEvent" text="Показать все">
                     <font>
                        <Font name="Consolas" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteEvent" text="Удалить">
                     <font>
                        <Font name="Consolas" size="14.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                  </Button>
                  <TextField fx:id="deleteTextField" minWidth="35.0" prefWidth="35.0">
                     <font>
                        <Font name="Consolas" size="14.0" />
                     </font></TextField>
               </children>
            </HBox>
         </children></VBox>
   </children>
</GridPane>
